#!/usr/bin/env ruby
require_relative 'lib/parse_arguments'

command = ARGV[0]
category = ARGV[1]
options = ParseArguments.parse
options[:name] = ARGV[2]
error_messages = ParseArguments.validate(options)

if error_messages.empty?
  puts "Theoretically creating: a #{category} titled #{options[:name]} with genre #{options[:genre]}, year #{options[:year]}, length #{options[:length]}, budget #{options[:budget]}, and mpaa #{options[:mpaa]}"
else
  puts error_messages
end